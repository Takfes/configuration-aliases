#!/bin/bash

# mac specifc aliases
eval "$(zoxide init zsh)"
alias src='source ~/.zshrc'
alias dot='cd ~/.dotfiles'
alias sck='cd /Users/takis/Documents/sckool'

# python specific
alias pipa='~/miniforge3/bin/pip'
export PATH=$PATH:$HOME/.poetry/bin
export PYENV_ROOT="$HOME/.pyenv"
command -v pyenv >/dev/null || export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)"

# spark configuration
export SPARK_HOME=/opt/spark
export PATH=$SPARK_HOME/bin:$PATH
# export PYSPARK_DRIVER_PYTHON='jupyter notebook'
# export PYSPARK_DRIVER_PYTHON_OPTS='notebook'

# yabai & skhd related
# function to get the name of the application -> yabai
getappname() {
    osascript -e "id of app \"$1\""
}
alias ys='yabai --start-service && skhd --start-service'
alias yq='yabai --stop-service && skhd --stop-service'
